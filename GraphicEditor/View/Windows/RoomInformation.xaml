<Window x:Class="GraphicEditor.View.Windows.RoomInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor.View.UserControls"
        mc:Ignorable="d"
        Title="RoomInformation" 
        Icon="/Resources/Icons/bed.png"
        WindowStartupLocation="CenterScreen"
        d:DesignHeight="300" d:DesignWidth="500">
    
    <Grid Background="AntiqueWhite">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        
        <ComboBox ItemsSource="{Binding Path=Beds, Mode=TwoWay}"
                  Name="roomComboBox"
                  SelectedItem="{Binding Path=SelectedBed, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  Grid.Column="0" 
                  Grid.RowSpan="3" 
                  Margin="20"
                  FontSize="32"/>

        <Grid Grid.Column="1" >
            <Label  Content="{Binding Path=BedInfo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"> </Label>
        </Grid>
        
    </Grid>
</Window>
