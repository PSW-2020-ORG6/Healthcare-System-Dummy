<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HCI_SIMS_PROJEKAT.ResourceDictionaries">
    
    <Style TargetType="Border" x:Key="WhitePanel">
        <Setter Property="Background" Value="#FFF8F2F2"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#FF938989"/>
    </Style>

    <Style TargetType="Border" x:Key="DarkPanel">
        <Setter Property="Background" Value="#FF292929"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#FF938989"/>
    </Style>
</ResourceDictionary>