<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HealthClinic.ResourceDictionaries">
    
    <!-- Basic Border Style -->
    <Style x:Key="SegmentOutline" TargetType="Border">
        <Setter Property="Background" Value="FloralWhite"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>
    
    <!-- Small Segment Style -->
    <Style x:Key="SmallerSegmentOutline" TargetType="Border" BasedOn="{StaticResource SegmentOutline}">
        <Setter Property="Background" Value="LightGray"/>
    </Style>
    
    <!-- More Options Border Style -->
    <Style x:Key="MoreOptions" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>
</ResourceDictionary>